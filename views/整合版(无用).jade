doctype html
html(lang='zh-cn')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title webReader
    link(href='bootstrap-3.3.5-dist/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='styles/pithy.css', rel='stylesheet')
  body
    // 进度条
    .progress.height
      .progress-bar(role='progressbar', aria-valuenow='79', aria-valuemin='0', aria-valuemax='100', style='width: 79%;')
        span.sr-only 79% Complete
    .container-fluid
      // 栅格系统
      .row
        #leftSide.col-md-2
          div
            form#form.login-form
              .header
                h3#information 登录
              .content
                input#user_name.input.username(name='user_name', type='text', placeholder='用户名')
                input#password.input.password(name='password', type='password', placeholder='密码')
                span#show_name.hide.user_name 用户名
              .footer
                input#submit.submit(type='submit', value='登录')
                input#logout.back.logout.hide(type='button', value='退出登录')
                input#mall.back(type='button', value='返回商城')
          p#pBeforeBooks.pBeforeBooks 登录后查看购买书目
          #books
        span#icon.glyphicon.glyphicon-triangle-left.iconSpan.selected(title='hide')
        #main.col-md-8
          section#section
            canvas#content
          #menuList.menuList
        #rightSide.col-md-2
          // 目录按钮
          span#menuBtn.glyphicon.glyphicon-th-list.main-menu
          // 上一页按钮
          button#prev.btn.btn-default.bleft(data-toggle='tooltip', data-placement='left', title='previous page')
            span.glyphicon.glyphicon-chevron-left
          // 下一页按钮
          button#next.btn.btn-default.bright(data-toggle='tooltip', data-placement='right', title='next page')
            span.glyphicon.glyphicon-chevron-right
    //footer
    //  -var now
    //  -var total
    //  -var rate
    //  | #{now}/#{total}
    // ===================================================================
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/bootstrap-3.3.5-dist/js/jquery.js')
    script(src='/bootstrap-3.3.5-dist/js/bootstrap.min.js')
    script(src='scripts/control.js')
    script(src='scripts/verify.js')
    script(src='scripts/lib/pdfjs/pdf.js')
    script(src='scripts/PDFreader.js')
                                                